# Файл с настройками для редактора.

root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = tab
insert_final_newline = true
trim_trailing_whitespace = true

[*.{js,txt,md,css,html,php,json,yml,scss,sass,pug}]
indent_style = tab
indent_size = 2

[*.md]
trim_trailing_whitespace = false
